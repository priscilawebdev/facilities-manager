{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "esnext",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./public/",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,

    /* Additional Checks */

    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "suppressImplicitAnyIndexErrors": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "client/src",
    "paths": {
      "components": ["components"],
      "containers": ["containers"],
      "utils": ["utils"],
      "ducks": ["ducks"]
    }
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    "webpack.config.js",
    "global.d.ts"
  ]
}
